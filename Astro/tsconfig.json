{
  "extends": "astro/tsconfigs/base",
  "include": ["src", "env.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Apps/*": ["src/apps/*"],
      "@Services/*": ["src/services/*"],
      "@Utilities/*": ["src/utils/*"],
      "@Layouts/*": ["src/layouts/*"],
      "@Assets/*": ["src/assets/*"],
      "@Context/*": ["src/context/*"],
      "@Pages/*": ["src/pages/*"],
      "@Content/*": ["src/content/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true
  }
}